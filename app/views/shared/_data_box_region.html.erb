<div class="data-box">
  <h3 class="text-center mb-3">Data for <%= region.gsub("_", " ") %></h3>
  <%= render 'shared/left_right_list', light: true, title: "Population", value: number_to_human(total_pop) %>
  <%= render 'shared/left_right_list', light: false, title: "Total Cases", value: number_with_delimiter(total_cases) %>
  <%= render 'shared/left_right_list', light: true, title: "Total Deaths", value: number_with_delimiter(total_deaths) %>
  <%= render 'shared/left_right_list', light: false, title: "Mortality Rate", value: number_with_delimiter(mortality_rate) %>
  <%= render 'shared/left_right_list', light: true, title: "Total Infection Rate", value: number_with_delimiter(spread) %>
  <h5 class="mt-3 text-center">The Countries in this Region</h5>
  <p class="text-center"><%= country_names.join(', ') %></p>
  <%= render 'shared/country_region_select', countries: countries, regions: regions %>
<div>
